@using TravelTripProje.Models.Siniflar
@model  List<Yorumlar>
@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h3 class="mb-0">
                <i class="bi bi-chat-dots me-2"></i> Yorum Listesi
            </h3>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th style="width:60px;">#</th>
                            <th>Kullanıcı</th>
                            <th>E-posta</th>
                            <th>Yorum</th>
                            <th>Blog</th>
                            <th class="text-center" style="width:120px;">Sil</th>
                            <th class="text-center" style="width:140px;">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td><span class="badge bg-secondary">@x.ID</span></td>
                                <td>@x.KullaniciAdi</td>
                                <td>@x.Mail</td>
                                <td>@x.Yorum</td>
                                <td class="fw-semibold">@x.Blog.Baslik</td>
                                <td class="text-center">
                                    <a href="/Admin/YorumSil/@x.ID" class="btn btn-sm btn-danger shadow-sm">
                                        <i class="bi bi-trash3"></i> Sil
                                    </a>
                                </td>
                                <td class="text-center">
                                    <a href="/Admin/YorumGetir/@x.ID" class="btn btn-sm btn-success shadow-sm">
                                        <i class="bi bi-pencil-square"></i> Güncelle
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>