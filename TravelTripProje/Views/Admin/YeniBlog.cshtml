@model TravelTripProje.Models.Siniflar.Blog
@{
    ViewBag.Title = "YeniBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container" style="max-width:800px; margin-top:40px;">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center rounded-top-4">
            <h3 class="mb-0">
                <i class="bi bi-plus-circle me-2"></i> Yeni Blog Ekle
            </h3>
        </div>

        <div class="card-body p-4">
            @using (Html.BeginForm("YeniBlog", "Admin", FormMethod.Post))
            {
                <div class="mb-3">
                    @Html.LabelFor(x => x.Baslik, "Başlık", new { @class = "form-label fw-semibold" })
                    @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control", placeholder = "Blog başlığını giriniz" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(x => x.Tarih, "Tarih", new { @class = "form-label fw-semibold" })
                    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control", placeholder = "GG.AA.YYYY" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(x => x.BlogImage, "Görsel URL", new { @class = "form-label fw-semibold" })
                    @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control", placeholder = "https://..." })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(x => x.Aciklama, "Açıklama", new { @class = "form-label fw-semibold" })
                    @Html.TextAreaFor(x => x.Aciklama, 10, 1, new { @class = "form-control", placeholder = "Blog içeriğini buraya yazın...", @style = "resize:none;" })
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success px-5 py-2 rounded-3 shadow-sm">
                        <i class="bi bi-check-circle me-2"></i>Blogu Kaydet
                    </button>
                    
                </div>
            }
        </div>
    </div>
</div>

